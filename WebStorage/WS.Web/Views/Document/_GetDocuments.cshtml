@using WS.Business.ViewModels
@model IEnumerable<DocumentView>
    @if (@Model.ElementAt(0).ParentId != 0)
    {
        <button id="backParentId" onclick="GoBack(@Model.ElementAt(0).ParentId)">Назад</button>
    }
    <table class="table">
        <tr><td>Name</td><td>Extention</td><td>Size</td><td>IsFile</td></tr>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr id="file-@i" ondblclick="DoubleClickAction(@Convert.ToInt32(Model.ElementAt(i).IsFile),@Model.ElementAt(i).Id)" onclick="ShowFileOptions(@Model.ElementAt(i).Id)">
                <td>@Model.ElementAt(i).Name</td>
                <td>@Model.ElementAt(i).Extention</td>
                <td>@Model.ElementAt(i).Size</td>
                <td>@Model.ElementAt(i).IsFile</td>
            </tr>
        }
    </table>

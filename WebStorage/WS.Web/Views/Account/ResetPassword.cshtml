@model WS.Business.ViewModels.AccountViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
    Layout = "~/Views/Account/Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3 loginAdd">
        <h2>@ViewData["Title"]</h2>
        <h4>Reset your password.</h4>
        <hr />
        <form asp-action="ResetPassword" method="post">
            <input asp-for="Code" type="hidden" />
            <div class="form-group">
                <input placeholder="Email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="password-field1" placeholder="Password" asp-for="Password" class="form-control" style="padding-right: 25px" />
                <span toggle="#password-field1" class="fa fa-fw fa-eye field-icon toggle-password text-danger"></span>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="password-field2" placeholder="Confirm Password" asp-for="ConfirmPassword" class="form-control" style="padding-right: 25px" />
                <span toggle="#password-field2" class="fa fa-fw fa-eye field-icon toggle-password text-danger"></span>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn-square btn-submit">Reset</button>
            </div>
        </form>
    </div>
</div>

<div id="resetModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title">Reset password</h3>
            </div>
            <div class="modal-body">
                <span>Your password has been reset. Please confirm  to log in.</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Login", "Account")'">Confirm</button>
            </div>
        </div>
    </div>
</div>

@if (Convert.ToBoolean(ViewData["SetModalReset"]) == true)
{
    <script>
        ConfirmReset();
        ViewData["SetModalReset"] = false;
    </script>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

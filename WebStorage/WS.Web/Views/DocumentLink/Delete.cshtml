@model WS.Data.DocumentLink
    @{
        ViewBag.Title = "Удаление";
    }

    <div>
        <dl class="dl-horizontal">
            <dt>Название</dt>
            <dd>
                @Html.DisplayFor(model => model.Id)
            </dd>

            <dt>Производитель</dt>
            <dd>
                @Html.DisplayFor(model => model.Link)
            </dd>

            <dt>Цена</dt>
            <dd>
                @Html.DisplayFor(model => model.IsEditable)
            </dd>
        </dl>

        <div>
            <form asp-controller="DocumentLink" asp-action="Delete" method="post">
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Удалить" />
                </div>
            </form>
        </div>
    </div>
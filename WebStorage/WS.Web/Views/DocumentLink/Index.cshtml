@model IEnumerable<WS.Data.DocumentLink>
@{
    ViewBag.Title = "Все смартфоны";
}
<a asp-action="Create">add</a>
<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>
                <a asp-action="Details" asp-controller="DocumentLink" asp-route-id="@item.Id">Подробнее</a> |
                <a asp-action="Edit" asp-controller="DocumentLink" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-controller="DocumentLink" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }
</table>

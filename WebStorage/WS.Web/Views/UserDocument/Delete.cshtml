@model WS.Data.UserDocument

    @{
        ViewBag.Title = "Удаление";
    }
    <div>
        <dl class="dl-horizontal">
            <dt>Название</dt>
            <dd>
                @Html.DisplayFor(model => model.IdUser)
                @Html.DisplayFor(model => model.IdUser)
            </dd>

            <dt>Производитель</dt>
            <dd>
                @Html.DisplayFor(model => model.Link)
            </dd>

            <dt>Цена</dt>
            <dd>
                @Html.DisplayFor(model => model.IdDocument)
            </dd>
        </dl>

        <div>
            <form asp-controller="UserDocument" asp-action="Delete" asp-route-id1="@Model.IdUser" asp-route-id2="@Model.IdDocument" method="post">
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Удалить" />
                </div>
            </form>
        </div>
    </div>
